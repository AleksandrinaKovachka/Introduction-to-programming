#include <iostream>

using namespace std;

int maxElementInFour(int a, int b, int c, int d);

int main()
{
	int max = maxElementInFour(3, 4, 6, 1);
	
	return 0;
}

int maxElementInFour(int a, int b, int c, int d)
{
	if (a > b && a > c && a > d)
	{
		return a;
	}
	if (b > a && b > c && b > d)
	{
		return b;
	}
	if (c > a && c > b && c > d)
	{
		return c;
	}
	if (d > a && d > b && d > c)
	{
		return d;
	}
	return 0;
}
