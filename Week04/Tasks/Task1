#include <iostream>

using namespace std;

int main()
{
	//решение представено с for
	int sum = 0; //променлива, в която ще съхранявам сумата на числата от 1 до 10

	for (int i = 1; i <= 10; i++)
	{
		sum += i;
	}

	cout << sum << endl;
	
	//решение представено с while
	sum = 0; //използвам същата променлива за сбора като на този ред и задавам отново да е със стойност 0
	int index = 1;
	while (index <= 10)
	{
		sum += index;
		index++;
	}

	cout << sum << endl;

	//решение представено с do...while
	sum = 0; //използвам същата променлива за сбора като на този ред и задавам отново да е със стойност 0
	index = 1;
	do
	{
		sum += index;
		++index; // <=> index++
	} while (index <= 10);

	cout << sum << endl;
  
  return 0;
}
